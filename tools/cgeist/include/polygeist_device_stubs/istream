/*===-- istream - Polygeist device stub for <istream> ---------------------===*\
|*                                                                            *|
|* Part of the Polygeist Project, under the Apache License v2.0               *|
|* See https://llvm.org/LICENSE.txt for license information.                  *|
|*                                                                            *|
|* This stub header provides an empty replacement for <istream> during        *|
|* CUDA/HIP device compilation. Device code does not use input streams.       *|
|*                                                                            *|
\*===----------------------------------------------------------------------===*/

#ifndef __POLYGEIST_DEVICE_STUBS_ISTREAM
#define __POLYGEIST_DEVICE_STUBS_ISTREAM

#ifdef __CUDA_ARCH__
// Device compilation: empty stub (device code doesn't use istream)
#else
// Host compilation: include the real header
#include_next <istream>
#endif

#endif // __POLYGEIST_DEVICE_STUBS_ISTREAM
