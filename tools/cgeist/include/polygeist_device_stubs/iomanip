/*===-- iomanip - Polygeist device stub for <iomanip> ---------------------===*\
|*                                                                            *|
|* Part of the Polygeist Project, under the Apache License v2.0               *|
|* See https://llvm.org/LICENSE.txt for license information.                  *|
|*                                                                            *|
|* This stub header provides an empty replacement for <iomanip> during        *|
|* CUDA/HIP device compilation. Device code does not use I/O manipulators.    *|
|*                                                                            *|
\*===----------------------------------------------------------------------===*/

#ifndef __POLYGEIST_DEVICE_STUBS_IOMANIP
#define __POLYGEIST_DEVICE_STUBS_IOMANIP

#ifdef __CUDA_ARCH__
// Device compilation: empty stub (device code doesn't use iomanip)
#else
// Host compilation: include the real header
#include_next <iomanip>
#endif

#endif // __POLYGEIST_DEVICE_STUBS_IOMANIP
