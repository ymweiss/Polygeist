/*===-- fstream - Polygeist device stub for <fstream> ---------------------===*\
|*                                                                            *|
|* Part of the Polygeist Project, under the Apache License v2.0               *|
|* See https://llvm.org/LICENSE.txt for license information.                  *|
|*                                                                            *|
|* This stub header provides an empty replacement for <fstream> during        *|
|* CUDA/HIP device compilation. Device code does not use file streams.        *|
|*                                                                            *|
\*===----------------------------------------------------------------------===*/

#ifndef __POLYGEIST_DEVICE_STUBS_FSTREAM
#define __POLYGEIST_DEVICE_STUBS_FSTREAM

#ifdef __CUDA_ARCH__
// Device compilation: empty stub (device code doesn't use fstream)
#else
// Host compilation: include the real header
#include_next <fstream>
#endif

#endif // __POLYGEIST_DEVICE_STUBS_FSTREAM
